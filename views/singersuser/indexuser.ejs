<h2 class="page-header">Search Singer</h2>
<form action="/singersuser" method="GET">
  <div class="form-row">
    <div class="form-item">
      <label>Name</label>
      <input type="text" name="name" value="<%= locals.searchOptions.name %>" />
    </div>
  </div>
  <div class="form-row form-row-end">
    <button class="btn btn-primary" type="submit>">Search</button>
  </div>
</form>
<br />
<% locals.singers.forEach(singer => { %>
<div class="author-row">
  <div class="author-name"><%= singer.name%></div>
  <div class="btn-row">
    <a class="btn btn-primary" href="/singersuser/<%= singer.id%>">View</a>
  </div>
</div>
<% })%>
<center><a class="btn btn-primary" href="/indexuser">Back</a></center>
